<Window x:Class="ZipApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZipApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <TextBox x:Name="source" HorizontalAlignment="Left" Height="26" Margin="10,50,0,0" TextWrapping="Wrap" Text="source" VerticalAlignment="Top" Width="342"/>
        <TextBox x:Name="target" HorizontalAlignment="Left" Height="26" Margin="10,88,0,0" TextWrapping="Wrap" Text="target.zip" VerticalAlignment="Top" Width="342"/>
        <Button x:Name="zip" Content="Zip" HorizontalAlignment="Left" Height="26" Margin="372,88,0,0" VerticalAlignment="Top" Width="75" Click="zip_Click"/>

    </Grid>
</Window>
